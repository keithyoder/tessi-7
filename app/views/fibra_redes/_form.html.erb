
<%= simple_form_for(@fibra_rede) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
   <div class="row">
      <div class="col">
        <%= f.input :nome %>
      </div>
      <div class="col">
        <%= f.association :ponto, collection: Ponto.fibra, label_method: :nome %>
      </div>
      <div class="col">
        <%= f.input :fibra_cor, collection: FibraRede.fibra_cores.keys %>
      </div>
    </div>
  </div>
  <div class="actions">
    <%= button_tag( :class => "btn btn-primary") do %>
      <i class="fas fa-save" aria-hidden="true"></i> Salvar
    <% end %>
<% end %>
