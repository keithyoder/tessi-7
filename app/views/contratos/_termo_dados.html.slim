    tr
      td colspan="4" 
        p.termo.campo Nome Empresarial:
        span.termo.variable = Setting.razao_social
      td colspan="2" 
        p.termo.campo Ato de Autoriza&ccedil;&atilde;o:
        span.termo.variable N&ordm; 3362/2010
