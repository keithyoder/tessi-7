<div class="row">
  <div class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3>Cadastro</h3>
      </div>
      <div class="card-body">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-inputs">
            <%= f.input :email, autofocus: true, autocomplete: "email" %>
            <%= f.input :password, label: "Senha", autocomplete: "current-password" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.input :password_confirmation, label: "Confirmar Senha", autocomplete: "new-password" %>
          </div>
          <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
            <i class="fa fa-sign-in"></i> Cadastrar-se
          <% end %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
