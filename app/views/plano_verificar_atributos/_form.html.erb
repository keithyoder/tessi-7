
<%= simple_form_for(@plano_verificar_atributo) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
  <div class="row">
    <div class="col">
      <%= f.association :plano, label_method: :nome %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= f.input :atributo %>
    </div>
    <div class="col">
      <%= f.input :op, collection: [':=', '==', '+=', '!=', '>', '>=', '<', '<=', '=~', '!Ëœ', '=*', '!*'] %>
    </div>
    <div class="col">
      <%= f.input :valor %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
