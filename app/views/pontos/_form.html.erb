
<%= simple_form_for(@ponto) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="row">
      <div class="col">
        <%= f.input :nome %>
      </div>
      <div class="col">
        <%= f.input :sistema, collection: Ponto.sistemas.keys %>
      </div>
      <div class="col">
        <%= f.input :tecnologia, collection: Ponto.tecnologias.keys %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.association :servidor, collection: Servidor.ativo.order(:nome), label_method: :nome %>
      </div>
      <div class="col">
        <%= f.input :ip, as: :string %>
      </div>
      <div class="col">
        <%= f.input :ipv6, as: :string %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.input :usuario %>
      </div>
      <div class="col">
        <%= f.input :senha %>
      </div>
      <div class="col">
        <%= f.input :equipamento, collection: Ponto.equipamentos.keys %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= button_tag( :class => "btn btn-primary") do %>
      <i class="fas fa-save" aria-hidden="true"></i> Salvar
    <% end %>
  </div>
<% end %>
