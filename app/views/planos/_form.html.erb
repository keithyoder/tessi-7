<%= simple_form_for(@plano) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="row">
      <div class="col">
        <%= f.input :nome %>
      </div>
      <div class="col">
        <%= f.input :mensalidade %>
      </div>
      <div class="col">
        <%= f.input :desconto %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.input :download %>
      </div>
      <div class="col">
        <%= f.input :upload %>
      </div>
    </div>
    <%= f.input :burst %>
    <%= f.input :ativo %>
  </div>

  <div class="actions">
    <%= button_tag( :class => "btn btn-primary") do %>
      <i class="fas fa-save" aria-hidden="true"></i> Salvar
    <% end %>
  </div>
<% end %>
